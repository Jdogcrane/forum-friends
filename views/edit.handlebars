<link rel="stylesheet" href="/css/postingStyle.css" />
<div class="container post">
  <div class="center">
    <form class="col s12 m1 new-msg-form">
      <!-- Title input -->
      <div class="input-field col s12">
        <input value={{post.title}} id="title-input" type="text" class="validate">
        <label for="post-title">Title</label>
      </div>
      <!-- send button -->
      <!-- Message input -->
      <div class="input-field col s6 center" id="custom-input">
        <textarea value={{post.content}} id="icon_prefix2" class="materialize-textarea"></textarea>
        <button class="btn red waves-effect waves-light" type="submit" name="send">change
          <i class="material-icons right">send</i>
        </button>
        <label for="icon_prefix2">Message</label>
      </div>
    </form>
  </div>
</div>


<script src="/js/managePost.js"></script>